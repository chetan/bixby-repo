{
  "name":"Network Connections by Type",
  "key":"net.conns",
  "metrics":{
    "tcp":{
      "desc": "Number of TCP connections",
      "unit":null,
      "optional": true
    },
    "udp":{
      "desc": "Number of UDP connections",
      "unit":null,
      "optional": true
    },
    "unix":{
      "desc": "Number of Unix streams",
      "unit":null,
      "optional": true
    },
    "total":{
      "desc": "Total number of connections",
      "unit":null,
      "optional": true
    },
    "port":{
      "desc": "Total number of connections by port",
      "unit":null,
      "optional": true
    }

  },
  "options":{
    "port":{
      "name":null,
      "desc":"Comma-delimited list of local ports to monitor in addition to total counts",
      "default":"80,443,25",
      "type":"text"
    }
  }
}
