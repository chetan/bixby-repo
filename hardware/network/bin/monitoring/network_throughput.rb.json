{
  "name": "network throughput",
  "key": "net",
  "metrics": {
    "*.tx": {
      "desc": "eth0 outgoing bytes/sec",
      "unit": "Bps"
    },
    "*.tx.packets": {
      "desc": "eth0 outgoing packets/sec",
      "unit": "pkts/s"
    },
    "*.rx": {
      "desc": "eth0 incoming bytes/sec",
      "unit": "Bps"
    },
    "*.rx.packets": {
      "desc": "eth0 incoming packets/sec",
      "unit": "pkts/s"
    }
  },

  "options": {
    "interfaces": {
      "name": "Interfaces",
      "desc": "Only interfaces that match the given regular expression will be monitored",
      "default": "venet|eth|en",
      "type": "text"
    }
  }
}
